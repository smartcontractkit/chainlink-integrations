.PHONY: mockery
mockery: ## Install mockery.
	go install github.com/vektra/mockery/v2@v2.52.1

.PHONY: codecgen
codecgen: ## Install codecgen
	go install github.com/ugorji/go/codec/codecgen@v1.2.10

.PHONY: generate
generate: codecgen mockery
	go generate ./...
	mockery

.PHONY: rm-mocked
rm-mocked:
	grep -rl "^// Code generated by mockery" | grep .go$ | xargs -r rm
